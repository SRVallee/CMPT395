<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HopperScheduleManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Cornflower</item>
        <item name="colorPrimaryVariant">@color/Cornflower_60</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber</item>
        <item name="colorSecondaryVariant">@color/amber_60</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--this is for enabling transitions-->
        <item name ="android:windowActivityTransitions">true</item>
        <!--to exit and enter transitions-->
        <item name = "android:windowAllowEnterTransitionOverlap">true</item>
        <item name = "android:windowEnterTransition">@transition/transitionmanager</item>
        <item name ="android:windowExitTransition">@transition/transitionmanager</item>
    </style>
</resources>